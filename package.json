{
  "name": "password",
  "version": "2.0.7",
  "description": "Hash based password manager",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint . --ext js",
    "start": "webpack-dev-server --mode development --inline=false --hot=false",
    "build": "npm run lint && webpack --mode production",
    "stats": "webpack --mode production --profile --json",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrdaniellewis/password.git"
  },
  "author": "mrdaniellewis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrdaniellewis/password/issues"
  },
  "homepage": "https://github.com/mrdaniellewis/password#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "gh-pages": "^2.0.1",
    "parcel": "^2.0.0-alpha.3.2",
    "preact": "^10.4.4"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": false
        }
      ],
      "class-methods-use-this": "off",
      "curly": [
        "error",
        "all"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "error"
          ]
        }
      ],
      "no-param-reassign": "off",
      "no-restricted-syntax": "off",
      "no-return-assign": [
        "error",
        "except-parens"
      ],
      "object-curly-newline": "off"
    }
  },
  "dependencies": {}
}
