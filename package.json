{
  "name": "password",
  "version": "2.0.7",
  "description": "Hash based password manager",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext js --ext jsx",
    "start": "parcel serve src/index.html",
    "build": "parcel build src/index.html",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrdaniellewis/password.git"
  },
  "author": "mrdaniellewis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrdaniellewis/password/issues"
  },
  "homepage": "https://github.com/mrdaniellewis/password#readme",
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-transform-react-jsx": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-preact": "^1.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "gh-pages": "^3.1.0",
    "jest": "^26.0.1",
    "parcel": "^2.0.0-beta.1",
    "preact": "^10.4.4"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:react/recommended",
      "preact"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "class-methods-use-this": "off",
      "import/extensions": [
        "error",
        "never",
        {
          "json": "always"
        }
      ],
      "import/no-default-export": "error",
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "no-restricted-syntax": "off",
      "object-curly-newline": [
        "error",
        {
          "consistent": true
        }
      ],
      "prefer-destructuring": "off",
      "react/no-unknown-property": [
        "error",
        {
          "ignore": [
            "class"
          ]
        }
      ],
      "react/prop-types": "off",
      "react/jsx-indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": [
        "error",
        2
      ],
      "react/jsx-max-props-per-line": [
        "error",
        {
          "maximum": 1,
          "when": "multiline"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.test.{js,jsx}",
          "src/__jest_setup.js"
        ],
        "env": {
          "jest": true
        },
        "plugins": [
          "jest"
        ],
        "rules": {
          "jest/expect-expect": "off",
          "jest/no-standalone-expect": "off"
        }
      }
    ]
  },
  "dependencies": {
    "immer": "^7.0.3",
    "uuid": "^8.1.0"
  }
}
