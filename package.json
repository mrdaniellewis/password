{
  "name": "password",
  "version": "2.0.3",
  "description": "Hash based password manager",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint . --ext js",
    "start": "webpack-dev-server --mode development --inline=false --hot=false",
    "build": "npm run lint && webpack --mode production",
    "stats": "webpack --mode production --profile --json",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrdaniellewis/password.git"
  },
  "author": "mrdaniellewis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrdaniellewis/password/issues"
  },
  "homepage": "https://github.com/mrdaniellewis/password#readme",
  "dependencies": {
    "workbox-webpack-plugin": "^3.6.3"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "gh-pages": "^2.0.1",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "terser-webpack-plugin": "^1.2.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0",
    "webpack-dev-server": "^3.1.14"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": false
        }
      ],
      "class-methods-use-this": "off",
      "curly": [
        "error",
        "all"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "error"
          ]
        }
      ],
      "no-param-reassign": "off",
      "no-restricted-syntax": "off",
      "no-return-assign": [
        "error",
        "except-parens"
      ],
      "object-curly-newline": "off"
    }
  }
}
